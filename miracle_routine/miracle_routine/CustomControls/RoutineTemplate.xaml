<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:miracle_routine.Converters"
             xmlns:local="clr-namespace:miracle_routine.Helpers"
             mc:Ignorable="d"
             x:Class="miracle_routine.CustomControls.RoutineTemplate">

    <ContentView.Resources>
        <ResourceDictionary>
            <conv:StartTimeStringConverter x:Key="StartTimeStringConverter"/>
            <conv:TakenTimeStringConverter x:Key="TakenTimeStringConverter"/>
        </ResourceDictionary>
    </ContentView.Resources>
    
  <ContentView.Content>
        <Frame CornerRadius="15" BackgroundColor="White" Margin="10" Padding="0">
            <StackLayout Orientation="Vertical">
                <StackLayout Orientation="Horizontal" Margin="10">
                    <Label Text="{Binding Name}"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"  
                           FontSize="Body"
                           VerticalTextAlignment="Center" />
                    <Label Text="/"
                           Margin="5, 0"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"  
                           FontSize="Body"
                           VerticalTextAlignment="Center" />
                    <Label Text="{Binding StartTime, Converter={StaticResource StartTimeStringConverter}}"
                           HorizontalOptions="StartAndExpand"
                           VerticalOptions="Center"  
                           FontSize="Body"
                           VerticalTextAlignment="Center" />
                    <ImageButton Source="ic_menu.png"
                                 WidthRequest="32" HeightRequest="32"
                                 BackgroundColor="White"
                                 HorizontalOptions="End"
                                 VerticalOptions="CenterAndExpand"
                                 Command="{Binding ShowHabitSettingCommand}"/>
                </StackLayout>
                <ListView x:Name="HabitListView"
                          ItemsSource="{Binding HabitList}"
                          ItemTapped="HabitListView_ItemTapped"
                          ItemSelected="HabitListView_ItemSelected"
                          VerticalOptions="FillAndExpand"
                          HeightRequest="{Binding Height}"
                          RowHeight="50">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal" Margin="7, 7">
                                    <Image Source="ic_blank_app.png" 
                                               HorizontalOptions="Start" 
                                               VerticalOptions="CenterAndExpand"
                                               WidthRequest="32"
                                               HeightRequest="32"/>
                                    <Label Margin="10, 0" VerticalOptions="CenterAndExpand" 
                                           Text="{Binding Name}"
                                           TextColor="{StaticResource PrimaryTextColor}"
                                           FontSize="18"/>
                                    <Label Margin="10, 0" 
                                           HorizontalOptions="End"
                                           VerticalOptions="CenterAndExpand" 
                                           Text="{Binding Time, Converter={StaticResource TakenTimeStringConverter}}"
                                           TextColor="{StaticResource PrimaryTextColor}"
                                           FontSize="18"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackLayout Orientation="Horizontal">
                    <Button Text="{local:Translate Start}" 
                            FontSize="Medium"
                            FontAttributes="Bold"
                            TextColor="{StaticResource ColorAccent}"
                            HorizontalOptions="FillAndExpand"
                            CornerRadius="15"
                            BackgroundColor="White"/>
                    <Label Margin="10, 0"
                           HorizontalOptions="End"
                           VerticalOptions="CenterAndExpand" 
                           Text="{Binding TotalTime, Converter={StaticResource TakenTimeStringConverter}}"
                           TextColor="{StaticResource PrimaryTextColor}"
                           FontSize="Body"/>
                </StackLayout>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>